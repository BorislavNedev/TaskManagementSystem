@model IEnumerable<TaskManagementSystem.Web.Models.TaskConciseViewModel>
@{
    ViewBag.Title = "Home Page";
}

<h1 style="text-align:center; color:#333333">Task Management System</h1>
<br />

<div class="row">
    @for (int i = 0; i < 6; i++)
    {
        var task = Model.ElementAt(i);
        <a href="@Url.Action("Details", "Tasks", new { task.Id })" style="color:#333333; ">
            <div class="col-md-6" style="border:1px solid #333333; border-radius:20px;">
                <div class="col-md-3">
                    <div><strong>Created Date:</strong></div>
                    <div>@task.CreatedDate</div>
                </div>
                <div class="col-md-3">
                    <div><strong>Description:</strong></div>
                    <div>@task.Description</div>
                </div>
                <div class="col-md-3">
                    <div><strong>Type:</strong></div>
                    <div>@task.Type</div>
                </div>
                <div class="col-md-3">
                    <div><strong>Required by:</strong></div>
                    <div>@task.RequiredByDate</div>
                </div>
            </div>
        </a>
        if (i > 0 && (i + 1) % 2 == 0)
        {
            @: </div>
            <br />
            @:<div class="row">
        }
    }
</div>